{% extends 'views/layout/base.njk' %}

{% block body %}
  <div class="container">
    <h1 class="title mt-5">{{car.brand}} {{car.model}}</h1>
    <div class="columns">
      <div class="column">
        <table class="table is-fullwidth is-size-5">
          <tbody>
            <tr>
              <th>Marca</th>
              <td>{{car.brand}}</td>
            </tr>
            <tr>
              <th>Modelo</th>
              <td>{{car.model}}</td>
            </tr>
            <tr>
              <th>AÃ±o</th>
              <td>{{car.year}}</td>
            </tr>
            <tr>
              <th>Kilometros</th>
              <td>{{car.mileage}}</td>
            </tr>
            <tr>
              <th>Color</th>
              <td>{{car.color}}</td>
            </tr>
            <tr>
              <th>Aire Acondicionado</th>
              <td>
                {{ "Si" if car.airConditioning }}
                {{ "No" if not car.airConditioning }}
              </td>
            </tr>
            <tr>
              <th>Pasajeros</th>
              <td>{{car.passengers}}</td>
            </tr>
            <tr>
              <th>Transmision</th>
              <td>{{car.transmission.charAt(0).toUpperCase() + car.transmission.slice(1)}}</td>
            </tr>
            <tr>
              <th>Precio por dia</th>
              <td>$ {{car.priceDay}}</td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="column">
        <label class="label">Imagen</label>
        <figure class="image is-2by1">
          <img src="/{{car.image}}"/>
        </figure>
      </div>
    </div>
      <div class="field is-grouped my-4">
        <p class="control">
          <a href="/cars/edit/{{car.id}}">
            <button class="button is-primary mx-2">
              <span class="icon">
                <i class="fas fa-edit"></i>
              </span>
              <span>Editar</span>
            </button>
          </a>
          <button id="delete-btn" data-id="{{car.id}}" data-brand="{{car.brand}}" data-model="{{car.model}}" class="button is-danger">
            <span class="icon">
              <i class="fas fa-trash-alt"></i>
            </span>
            <span>Eliminar</span>
          </button>
        </p>
      </div>
    </div>
  </div>

  <div id="prompt-container"></div>
{% endblock %}

{% block scripts %}
<script src="/public/js/prompt-delete-car.js"></script>
{% endblock %}

